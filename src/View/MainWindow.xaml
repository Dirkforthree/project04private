<Window x:Class="Effektive_Präsentation.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Effektive_Präsentation.View"
        xmlns:localVM="clr-namespace:Effektive_Präsentation.ViewModel"
        mc:Ignorable="d"
        Title="Effektive Präsentationen" Height="450" Width="800">
    <Window.DataContext>
        <localVM:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Button x:Name="OpenFile" Click="dropArea_Click" Drop="ImagePanel_Drop" AllowDrop="true" Background="#FFFFFF" BorderThickness="0">Drop Here</Button>
            <TextBlock x:Name="dropAreaText" Text="{Binding Chapters.DefaultChapter}"/>
        </StackPanel>
    </Grid>
</Window>
