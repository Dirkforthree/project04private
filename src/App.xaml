<Application x:Class="Effektive_Praesentationen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Effektive_Praesentationen.ViewModel" 
             xmlns:view="clr-namespace:Effektive_Praesentationen.View"
             xmlns:local="clr-namespace:Effektive_Praesentationen">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:FileSelectionViewModel}">
            <view:FileSelectionView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModel:InactiveLoopViewModel}">
            <view:InactiveLoopView/>
        </DataTemplate>
    </Application.Resources>
</Application>
